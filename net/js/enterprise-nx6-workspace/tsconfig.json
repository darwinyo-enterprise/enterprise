{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@enterprise/*": [
        "libs/*"
      ],
      "@enterprise/material/file-upload": [
        "libs/material/file-upload/src/index.ts"
      ],
      "@enterprise/material/list-item-actions": [
        "libs/material/list-item-actions/src/index.ts"
      ],
      "@enterprise/core": [
        "libs/core/src/index.ts"
      ],
      "@enterprise/core/testing": [
        "libs/core/testing/src/index.ts"
      ],
      "@enterprise/shared": [
        "libs/shared/src/index.ts"
      ],
      "@enterprise/commerce/catalog-lib": [
        "libs/commerce/catalog-lib/src/index.ts"
      ],
      "@enterprise/commerce/category-lib": [
        "libs/commerce/category-lib/src/index.ts"
      ],
      "@enterprise/commerce/manufacturer-lib": [
        "libs/commerce/manufacturer-lib/src/index.ts"
      ],
      "@enterprise/commerce/product-lib": [
        "libs/commerce/product-lib/src/index.ts"
      ],
      "@enterprise/commerce/core": [
        "libs/commerce/core/src/index.ts"
      ],
      "@enterprise/material/stars": [
        "libs/material/stars/src/index.ts"
      ],
      "@enterprise/material/gallery": [
        "libs/material/gallery/src/index.ts"
      ],
      "@enterprise/material/counter": [
        "libs/material/counter/src/index.ts"
      ],
      "@enterprise/commerce/basket-lib": [
        "libs/commerce/basket-lib/src/index.ts"
      ],
      "@enterprise/commerce/order-lib": [
        "libs/commerce/order-lib/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
